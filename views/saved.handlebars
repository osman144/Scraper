
{{#each dbArticles}}
<div class="mdl-cell mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title" style="padding-top: 12px;">
        <img src="{{image}}" style="margin: auto; width: 275px; height: 160px;" alt="">
        </div>
        <h2 class="mdl-card__title-text">{{ title }}</h2>
        <div class="mdl-card__supporting-text post-excerpt">
        {{blurb}}
        </div>
        <div class="mdl-card__actions mdl-card--border post-categories post-tags">
        <a href={{link}} target="_blank" id="read-more" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--accent">
            Read More
        </a>
        <a id="save-article" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--accent">
            Note
        </a>
        </div>
        {{!-- Trigger/Open The Modal --}}
        <button id="myBtn">Open Modal</button>
        {{!-- The Modal --}}
        <div id="myModal" class="modal">
            {{!-- Modal Content --}}
            <div class="modal-content">
                <span class="close">&times;</span>
                <p>Some text in the Modal..</p>
            </div>

        </div>

        
        <div class="mdl-card__menu">
    
    </div>
</div>
{{/each}}


